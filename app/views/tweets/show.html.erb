<div class="container">
    <div class="row">  
      <div class = "offset-md-2 col-md-8">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= link_to @tweet.user.username, user_path(@tweet.user.username) %> </h5>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text"><%= @tweet.content %></p>
            <%= link_to 'Edit', edit_tweet_path(@tweet), class:"card-link" %>
            <%= link_to 'Delete', @tweet, Method: :destroy, class:"card-link" %>
            <%= link_to 'Back', tweets_path, class:"card-link" %>
          </div>
        </div>
    </div>
  </div>

</div>